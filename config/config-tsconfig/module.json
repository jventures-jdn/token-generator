{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node Module",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  }
}
